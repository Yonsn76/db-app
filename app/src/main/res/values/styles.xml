<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Futuristic dialog theme -->
    <style name="FuturisticDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorAccent">#0033FF</item>
    </style>
    
    <!-- Futuristic dialog theme - Green variant -->
    <style name="FuturisticDialogTheme.Green" parent="FuturisticDialogTheme">
        <item name="colorAccent">#33FF33</item>
    </style>
    
    <!-- Futuristic dialog theme - Red variant -->
    <style name="FuturisticDialogTheme.Red" parent="FuturisticDialogTheme">
        <item name="colorAccent">#FF3333</item>
    </style>
</resources>
