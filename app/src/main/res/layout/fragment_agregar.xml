        android:fontFamily="monospace"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/button_clear"
