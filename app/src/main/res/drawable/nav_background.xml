<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFD700" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main background -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2B2B2B"
                android:centerColor="#232323"
                android:endColor="#1E1E1E"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#40FFD700" />
        </shape>
    </item>
</layer-list>